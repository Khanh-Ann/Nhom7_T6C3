<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>LANT </title>

    @*<link href="Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">*@

    <!-- jQuery -->
    <script src="js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Scripts/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    @*<link href="fonts/css/fontawesome/~/Content/all.min.css" type="text/css" rel="stylesheet">*@

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Scripts/js/script.js" type="text/javascript"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="@Url.Action("Index", "SanPham")">
                            <img src="~/Content/images/logo.png"
                                 style="width: 100px; height: auto;" />
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="@Url.Action("TimKiem","NguoiDung")" class="search-header">
                            <div class="input-group w-100">
                                <select class="custom-select border-right" name="category_name">
                                    <option value="">Tất cả</option>
                                    <option value="codex">Sản phẩm</option>
                                    <option value="comments">Mới nhất</option>
                                    <div class="input-group">
                                        <input type="text" name="sTuKhoa" class="form-control" placeholder="Nhập từ khóa tìm kiếm" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit">
                                                Tìm kiếm
                                            </button>
                                        </div>
                                    </div>
                                </select>


                                @*@using (Html.BeginForm("TimKiem", "NguoiDung", FormMethod.Get))*@

                                @*<div class="input-group">
                                        <input type="text" name="sTuKhoa" class="form-control" placeholder="Nhập từ khóa tìm kiếm" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit">
                                                Tìm kiếm
                                            </button>
                                        </div>
                                    </div>*@

                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->

                </div>

                <ul class="list-main">
                    @if (Session["Taikhoan"] == null || Session["Taikhoan"].ToString() == "")
                    {
                        <li class="widget-header mr-3 user-section">
                            <a href="#" class="widget-view">
                                <i class="ti-user"></i>
                                <small class="text">Người dùng</small>
                            </a>
                        </li>

                        <li class="widget-header mr-3 user-section">
                            <a href="@Url.Action("Dangnhap","Nguoidung")" class="widget-view">
                                <i class="ti-user"></i>
                                <small class="text">Đăng nhập</small>
                            </a>
                        </li>

                        <li class="widget-header mr-3 user-section">
                            <a href="@Url.Action("DangKy","Nguoidung")" class="widget-view">
                                <i class="ti-power-off"></i>
                                <small class="text">Đăng ký</small>
                            </a>
                        </li>

                        <li class="widget-header user-section">
                            <a href="@Url.Action("DatHang","Giohang")" class="widget-view">
                                <i class="fa fa-shopping-cart"></i>
                                <small class="text">Giỏ hàng</small>
                            </a>
                        </li>

                    }
                    else
                    {
                        <div class="widget-header user-section" style="display: flex; margin-top: 14px;">
                            <a style="margin-top: 20px">
                                @Session["TDN"].ToString()
                                <i class="widget-view"></i>
                            </a>
                            <a href="@Url.Action("Thoat","NguoiDung")">
                                <i class="widget-view"></i>
                                <small class="text">Đăng xuất</small>
                            </a>
                        </div>
                        <li class="widget-header user-section">
                            <a href="@Url.Action("DatHang","Giohang")" class="widget-view cart-icon">
                                <i class="fa fa-shopping-cart"></i>
                                <small class="text">Giỏ hàng</small>
                            </a>
                        </li>

                    }
                </ul>

            </div>

            <!--</div>-->  @*container.//*@
        </section>  @*header-main .//*@


        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="@Url.Action("DanhSach", "DanhSachSanPham")">
                                <i class="fa fa-bars text-muted mr-2"></i> DANH MỤC
                            </a>
                            @*<div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Trang Điểm</a>
                                    <a class="dropdown-item" href="#">Son Môi</a>
                                    <a class="dropdown-item" href="#">Nước Hoa</a>
                                </div>*@

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">THƯƠNG HIỆU</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">KHUYẾN MÃI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">CHAT VỚI TÔI</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ml-md-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">THEO DÕI ĐƠN HÀNG</a>
                        </li>
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>
    </header> <!-- section-header.// -->



    @RenderBody()


    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">
                    <aside class="col-md col-6">
                        <h6 class="title">LANT</h6>
                        <ul class="list-unstyled">
                            <li> Công ty LANT là một công ty chuyên kinh doanh các mặt hàng về mỹ phẩm với quy mô tầm trung.</li>
                            <li> Cửa hàng đảm bảo được sự trải nghiệm của khách hàng về các sản phẩm, các tiện ích thanh toán có thể được thực hiện trực tuyến thông qua các sàn giao dịch mà không cần phải đến cửa hàng.</li>
                        </ul>
                    </aside>

                    <aside class="col-md col-6">
                        <h6 class="title">VỀ LANT</h6>
                        <ul class="list-unstyled">
                            <li> <a href="#">Về chúng ta</a></li>
                            <li> <a href="#">Câu chuyện thương hiệu</a></li>
                            <li> <a href="#">Liên hệ</a></li>
                        </ul>
                    </aside>

                    <aside class="col-md col-6">
                        <h6 class="title">CHÍNH SÁCH</h6>
                        <ul class="list-unstyled">
                            <li> <a href="#">Chính sách và giao nhận thanh toán</a></li>
                            <li> <a href="#">Chính sách bảo mật thông tin cá nhân</a></li>
                            <li> <a href="#">Chính sách đổi trả sản phẩm</a></li>
                            <li> <a href="#">Điều khoản sử dụng</a></li>
                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->

            <section class="footer-bottom text-center">

                <p class="text-white">Hệ Thống Phân Phối Mỹ Phẩm Chính Hãng</p>
                <p class="text-muted"> &copy 2024 LANT, All rights reserved </p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->



</body>
</html>
<style>

    /* Hiệu ứng hover trên các mục */
    .dropdown-item:hover {
        background-color: #ffcc99; /* Nền cam nhạt khi hover */
        color: #000;
    }


    /* Styling the list container */
    ul.list-main {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        list-style: none;
        padding: 0;
        margin: 0;
        margin-left: 1000px; /* giữ nguyên khoảng cách như trong yêu cầu của bạn */
    }

    /* General styling for links and icons */
    .widget-header {
        margin-left: 30px; /* Khoảng cách giữa các mục */
    }

    .widget-view {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        font-size: 20px;
        transition: color 0.3s ease;
    }

        .widget-view:hover {
            color: #007bff; /* Màu xanh dương khi di chuột */
        }

        .widget-view i {
            margin-right: 5px;
            font-size: 18px; /* Kích thước biểu tượng */
        }

    .text {
        font-size: 14px;
    }

    /* User session display */
    .user-info {
        display: flex;
        align-items: center;
    }

        .user-info div {
            margin-right: 15px; /* Khoảng cách giữa các mục trong phần user */
        }

        .user-info i {
            margin-right: 5px;
            font-size: 18px;
        }

    /* Shopping cart icon */
    .fa-shopping-cart {
        color: #ff5722;
    }

        .fa-shopping-cart:hover {
            color: #ff9800; /* Màu khi di chuột qua biểu tượng giỏ hàng */
        }
</style>

